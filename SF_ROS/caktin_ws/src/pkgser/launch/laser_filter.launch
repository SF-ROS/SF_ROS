<launch>

  <node pkg="laser_filters" type="scan_to_scan_filter_chain"
      name="laser_filter_front">
    <rosparam command="load" file="$(find pkgser)/param/laser_filter_front.yaml" />
    <remap from="scan" to="scan_front" />
    <remap from="scan_filtered" to="scan_filtered_front" />
  </node>


  <node pkg="laser_filters" type="scan_to_scan_filter_chain"
      name="laser_filter_back">
    <rosparam command="load" file="$(find pkgser)/param/laser_filter_back.yaml" />
    <remap from="scan" to="scan_back" />
    <remap from="scan_filtered" to="scan_filtered_back" />
  </node>

</launch>