<launch>

  <node name="rplidarNode_front"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
    <param name="serial_port"         type="string" value="/dev/laser_front"/>
    <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
    <!--param name="serial_baudrate"     type="int"    value="256000"--><!--A3 -->
    <param name="frame_id"            type="string" value="hokuyo_link_front"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <remap from = "/scan" to = "/scan_front"/>
  </node>

  <node name="rplidarNode_back"          pkg="rplidar_ros"  type="rplidarNode" output="screen">
    <param name="serial_port"         type="string" value="/dev/laser_back"/>
    <param name="serial_baudrate"     type="int"    value="115200"/><!--A1/A2 -->
    <!--param name="serial_baudrate"     type="int"    value="256000"--><!--A3 -->
    <param name="frame_id"            type="string" value="hokuyo_link_back"/>
    <param name="inverted"            type="bool"   value="false"/>
    <param name="angle_compensate"    type="bool"   value="true"/>
    <remap from = "/scan" to = "/scan_back"/>

  </node>


  <arg name = "model" default = "$(find pkgser)/urdf/lujiebot.xacro"/>

    <!-- urdf xml robot description loaded on the Parameter Server-->
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" /> 

    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
    <!-- start robot state publisher -->
    <node pkg="robot_state_publisher" type="state_publisher" name="robot_state_publisher" output="screen" >
        <param name="publish_frequency" type="double" value="50.0" />
    </node>

  
  <include file="$(find pkgser)/launch/laser_filter.launch"/>   
  <include file="$(find ira_laser_tools)/launch/laserscan_multi_merger.launch"/>   



  <!--<node pkg="rviz" type="rviz" name="rviz" args="-d $(find pkgser)/launch/laser.rviz" />-->


</launch>